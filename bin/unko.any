#!/bin/sh

usage() {
  cat << EOF
Usage: $0 <UNKO> [PHRASE ...]
UNKO:   Alternative character of ðŸ’©.
PHRASE: Phrase for shout.
EOF
  exit 0
}

if [ $# -lt 1 ]; then
  usage
fi

UNKO="$1"
readonly UNKO

shift

UNKO_SHOUT="${0%/*}/unko.shout"
readonly UNKO_SHOUT

exec "$UNKO_SHOUT" ${1+"$@"} | sed "s/ðŸ’©/$UNKO/g"
